
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root@localhost:3306/db_dev"
}

model User {
  id        Int      @id @default(autoincrement())
  user_id   String   @default(uuid()) 
  name      String
  email     String   @unique
  phone     String?
  adresse   String?
  password  String
  role      Role   @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}